<!DOCTYPE html>
<html>
<head>
  <title>EcommerceApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet' type='text/css'>
</head>
<body>

<nav class="navbar navbar-light" style="background-color: #3B2E2A;">
  <ul class="nav navbar-nav">
    <li class="link">
      <a href="/products">Home <span class="sr-only">(current)</span></a>
    </li>
    <li class="nav-item">
      <a href="/products/random">Random Product</a>
    </li>
    <li class="nav-item">
      <a href="/products?display=discount">Discount Items</a>
    </li>
    <li class="nav-item">
      <a href="#">About</a>
    </li>
  </ul>

  <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to "Sign Out", "/users/sign_out", method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign Up", "/users/sign_up" %></li>
          <li><%= link_to "Sign In", "/users/sign_in" %></li>
        <% end %>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
        </li>
      </ul>
</nav>


<% flash.each do |name, message| %>
  <!-- <div class="alert alert-<%= name %>" role="alert"><%= message %></div> -->
  <!-- make alerts dismissible -->
  <div class="alert alert-warning alert-<%= name %>" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <%= message %>
</div>
<% end %>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
