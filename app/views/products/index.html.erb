<h1>Kylie's Fun</h1>

<div class="row">
  <% @products.each do |product| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <a href="/products/<%= product.id %>">
        <p><%= link_to product.name, "/products/#{product.id}" %></p>
        <p><%= product.price %></p>
        <p><%= product.description %></p>
        <div>
          <img src="<%= product.images.first.URL %>" width="200" height="250">
        </div>
      </a>
    </div>
  </div>
  <% end %>

  <%= link_to "New", "/products/new"%>
  <%= link_to "Sort by Price", "/products?sort=price" %>
  <%= link_to "Sort by Price-Descending", "/products?sort=desc_price" %>
</div>