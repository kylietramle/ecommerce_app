<h1>Display All Products</h1>

<table class ="table">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Image</th>
    <th>Description</th>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td><a href="/products/<%= product.id %>"><%=product.name%></a></td>
    <td><%=product.price%></td>
    <td><img src="<%=product.image%>"></td>
    <td><%=product.description%></td>
  </tr>
  <% end %>
</table>