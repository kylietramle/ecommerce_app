<h1>Display All Products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Image</th>
    <th>Description</th>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td><%=product.name%></td>
    <td><%=product.price%></td>
    <td><%=product.image%></td>
    <td><%=product.description%></td>
  </tr>
  <% end %>
</table>